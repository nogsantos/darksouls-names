{
  "name": "darksouls-names",
  "version": "0.0.0-development",
  "description": "Get random Dark Souls names",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha src/index.test.js -w",
    "check-coverage": "istanbul check-coverage --statements 60 --branches 60 --functions 60 --lines 60",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test:single": "istanbul cover -x *.test.js _mocha -- -R spec src/index.test.js",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nogsantos/darksouls-names.git"
  },
  "keywords": [
    "random",
    "dark",
    "souls"
  ],
  "author": "Fabricio Nogueira <nogsantos@gmail.com> (http://fabricionogueira.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nogsantos/darksouls-names/issues"
  },
  "homepage": "https://github.com/nogsantos/darksouls-names#readme",
  "dependencies": {},
  "devDependencies": {
    "chai": "4.1.2",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "ghooks": "2.0.2",
    "istanbul": "0.4.5",
    "mocha": "5.0.0",
    "semantic-release": "^12.4.1",
    "travis-deploy-once": "^4.3.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  }
}
